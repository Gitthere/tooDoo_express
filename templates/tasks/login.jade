extends ../layout

block content
  div#loginPage Please Log In
    form.loginForm.id(action="/users/", method="POST", enctype="application/x-www-form-urlencoded")
      p
        label(for="name_input") Name
        input.name_input(name="name_input", type="text")
      p
        label(for="email_input") Email
        input.email_input(name="email_input", type="text")
      p
        label(for="password_input") Password
        input.password_input(name="password_input", type="text")
      button#loginButton(type="submit") Login
