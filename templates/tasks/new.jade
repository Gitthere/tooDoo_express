extends ../layout

block content
  h1 New Task To Be Added
  a(href="/logout")
    button#logout(type="submit") Logout
  form(action="/tasks", method="POST", enctype="application/x-www-form-urlencoded")
    p
      label(for="title_input") Title
      input#title_input( type="text", name="taskTitle")
    p
      label(for="notes_input") Notes
      input#notes_input( type="text", name="taskNotes")
    p
      button#createTaskButton(type="submit") Create Task
