extends ../layout

block content
  h1 testing list path
  ul
    each task in tasksCollection
      li
        //-link for the title
        a(href="/tasks/#{task._id}")
          span.title=task.title
        br
        span.notes=task.notes
        a(href="/tasks/#{task._id}/edit")
          button Edit
        //- a(href="/tasks/#{task._id, }?_method=DELETE")
        //-   button Delete
        form(action="/tasks/#{task._id}?_method=DELETE", method="POST", enctype="application/x-www-form-urlencoded")
          button(type="submit") Delete